<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_all"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/latihanStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:gravity="center"
        android:text="@string/title_main"
        android:textSize="@dimen/text_head"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnInStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_15"
        android:text="Internal Storage"
        android:textSize="@dimen/text_normal"
        app:layout_constraintTop_toBottomOf="@+id/latihanStorage" />


    <Button
        android:id="@+id/btnExStorage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10"
        android:text="External Storage"
        android:textSize="@dimen/text_normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInStorage" />

</androidx.constraintlayout.widget.ConstraintLayout>